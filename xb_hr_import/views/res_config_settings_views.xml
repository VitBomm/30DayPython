<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_leave" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.attendance</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <h2>Leaves Type</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            
                        </div>
                        <div class="o_setting_right_pane">                           
                            <label string="Legal Leave" for="expense_journal_id"/>
                            <div>
                                <field name="legal_leave" options="{'no_create': True, 'no_open': True}" domain="[('company_id', '=', company_id)]"/>
                            </div>
                            <label string="Unpaid Leave" for="expense_bank_journal_id"/>
                            <div>
                                <field name="unpaid_leave" options="{'no_create': True, 'no_open': True}" domain="[('company_id', '=', company_id)]"/>
                            </div>
                        </div>
                    </div>                    
                </div>
            </xpath>            
        </field>
    </record>
</odoo>